<% @messages.each do |message| %>
	<div class="message">
		<h3><a href="/messages/<%= message.id %>"><%= message.content %></a><small> (by: <%= message.author %>) <a href="<%= message.url %>">My link</a></small></h3>
		<p>
			<a href="/messages/new">Post a message... It's FREE (for now)!</a>
		</p>
	</div>
<% end %>